# Maintainer: Bouke Haarsma <boukehaarsma23+aur<at>gmail.com>

pkgname=plymouth-theme-chimeraos
pkgver=1
pkgrel=1
pkgdesc='Spinner theme with ChimeraOS logo'
arch=('any')
url='https://chimeraos.org'
license=('GPL')
depends=('plymouth')
source=(
    'plymouth.conf'
	'plymouth-theme-chimeraos.tar.xz'
)
sha256sums=('0f69e70d2308a88ca15fba738d1455882c83da4ec80f1854c55eda1fd0bb9c1e'
            '2871caa5891cbfd26775b39adb5e7bf30d26820914e0e325592ec98836b57365')

package() {
    install -Dvm644 plymouth.conf "${pkgdir}/etc/plymouth/plymouth.conf"
	cd "${srcdir}/chimeraos"
	mkdir -p "${pkgdir}/usr/share/plymouth/themes/chimeraos"
	install -Dvm644 * "${pkgdir}/usr/share/plymouth/themes/chimeraos"
}
