pkgname=plymouth-theme-chimeraos
pkgver=1
pkgrel=1
pkgdesc='Spinner theme with ChimeraOS logo'
arch=('any')
url='https://chimeraos.org'
license=('GPL')
depends=('plymouth')
source=(
    'chimeraos.tar.xz'
    'plymouth.conf'
)
sha256sums=('e7024f130682a265aa683bcd46000732b7ce18ec4daecdabc6836ea2e622cc4a'
            '0f69e70d2308a88ca15fba738d1455882c83da4ec80f1854c55eda1fd0bb9c1e')

package() {
    install -Dm644 "${srcdir}/chimeraos/"* -t "${pkgdir}/usr/share/plymouth/themes/chimeraos"
    install -Dm644 "${srcdir}/plymouth.conf" -t "${pkgdir}/etc/plymouth/"
}
