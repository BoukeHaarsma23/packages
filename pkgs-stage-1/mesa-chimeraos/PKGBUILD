prepare() {
  cd mesa-$_mesaver

  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done

  # Include package release in version string so Chromium invalidates
  # its GPU cache; otherwise it can cause pages to render incorrectly.
  # https://bugs.launchpad.net/ubuntu/+source/chromium-browser/+bug/2020604
  echo "$pkgver-$epoch.$pkgrel" >VERSION
}

build() {
  local meson_options=(
    -D android-libbacktrace=disabled
    -D b_ndebug=true
    -D gallium-drivers=radeonsi,nouveau,swrast,i915,iris,crocus,zink
    -D gallium-extra-hud=true
    -D gallium-nine=true
    -D gallium-opencl=icd
    -D gallium-rusticl=true
    -D gles1=disabled
    -D glvnd=enabled
    -D glx=dri
    -D intel-clc=enabled
    -D libunwind=disabled
    -D microsoft-clc=disabled
    -D osmesa=true
    -D platforms=x11,wayland
    -D video-codecs=all
    -D vulkan-drivers=amd,intel,intel_hasvk,swrast,nouveau
    -D vulkan-layers=device-select,intel-nullhw,overlay
  )

  meson64_options=(
    "${meson_options[@]}"
    -D intel-rt=enabled
    -D gallium-omx=bellagio
    -D valgrind=enabled
  )

  meson32_options=(
    --cross-file lib32
    "${meson_options[@]}"
    -D intel-rt=disabled
    -D gallium-omx=disabled
    -D valgrind=disabled
  )

  # Build only minimal debug info to reduce size
  CFLAGS+=' -g1'
  CXXFLAGS+=' -g1'

  # Inject subproject packages
  export MESON_PACKAGE_CACHE_DIR="$srcdir"
  arch-meson mesa-$_mesaver build64 "${meson64_options[@]}"
  meson configure build64 --no-pager # Print config
  meson compile -C build64

  export BINDGEN_EXTRA_CLANG_ARGS="-m32"
  arch-meson mesa-$_mesaver build32 "${meson32_options[@]}"
  meson configure build32 --no-pager # Print config
  meson compile -C build32
}

_pick() {
  local p="$1" f d; shift
  for f; do
    d="$srcdir/$p/${f#$pkgdir/}"
    mkdir -p "$(dirname "$d")"
    mv -v "$f" "$d"
    rmdir -p --ignore-fail-on-non-empty "$(dirname "$f")"
  done
}

package_mesa-chimeraos() {
  depends=(
    'expat'
    'gcc-libs'
    'glibc'
    'libdrm'
    'libelf'
    'libglvnd'
    'libx11'
    'libxcb'
    'libxext'
    'libxfixes'
    'libxshmfence'
    'libxxf86vm'
    'llvm-libs'
    'lm_sensors'
    'wayland'
    'zlib'
    'zstd'

    'libomxil-bellagio'
  )
  optdepends=(
    'opengl-man-pages: for the OpenGL API man pages'
  )
  provides=(
    'mesa'
    'mesa-libgl'
    'opengl-driver'
  )
  conflicts=('mesa-libgl')
  replaces=('mesa-libgl')

  meson install -C build64 --destdir "$pkgdir"
  (
    local libdir=usr/lib icddir=usr/share/vulkan/icd.d

    cd "$pkgdir"

    _pick libva $libdir/dri/*_drv_video.so

    _pick vdpau $libdir/vdpau

    _pick clover $libdir/gallium-pipe
    _pick clover $libdir/libMesaOpenCL*
    _pick clover etc/OpenCL/vendors/mesa.icd

    _pick clrust $libdir/libRusticlOpenCL*
    _pick clrust etc/OpenCL/vendors/rusticl.icd

    _pick vkintel $icddir/intel_*.json
    _pick vkintel $libdir/libvulkan_intel*.so

    _pick vklayer $libdir/libVkLayer_*.so
    _pick vklayer usr/bin/mesa-overlay-control.py
    _pick vklayer usr/share/vulkan/{ex,im}plicit_layer.d

    _pick vknvidia $icddir/nouveau_*.json
    _pick vknvidia $libdir/libvulkan_nouveau*.so

    _pick vkradeon $icddir/radeon_icd*.json
    _pick vkradeon $libdir/libvulkan_radeon.so
    _pick vkradeon usr/share/drirc.d/00-radv-defaults.conf

    _pick vkswrast $icddir/lvp_icd*.json
    _pick vkswrast $libdir/libvulkan_lvp.so

    # indirect rendering
    ln -sr $libdir/libGLX_{mesa,indirect}.so.0
  )

  install -Dm644 mesa-$_mesaver/docs/license.rst -t "$pkgdir/usr/share/licenses/$pkgname"

}

package_lib32-mesa-chimeraos() {
  depends=(
    'lib32-expat'
    'lib32-gcc-libs'
    'lib32-glibc'
    'lib32-libdrm'
    'lib32-libelf'
    'lib32-libglvnd'
    'lib32-libx11'
    'lib32-libxcb'
    'lib32-libxext'
    'lib32-libxfixes'
    'lib32-libxshmfence'
    'lib32-libxxf86vm'
    'lib32-llvm-libs'
    'lib32-lm_sensors'
    'lib32-wayland'
    'lib32-zlib'
    'lib32-zstd'

    'mesa-chimeraos'
  )
  optdepends=(
    'opengl-man-pages: for the OpenGL API man pages'
  )
  provides=(
    'lib32-mesa'
    'lib32-mesa-libgl'
    'lib32-opengl-driver'
  )
  conflicts=('lib32-mesa-libgl')
  replaces=('lib32-mesa-libgl')

  meson install -C build32 --destdir "$pkgdir"
  (
    local libdir=usr/lib32 icddir=usr/share/vulkan/icd.d

    cd "$pkgdir"

    _pick libva32 $libdir/dri/*_drv_video.so

    _pick vdpau32 $libdir/vdpau

    _pick clover32 $libdir/gallium-pipe
    _pick clover32 $libdir/libMesaOpenCL*
    _pick clover32 etc/OpenCL/vendors/mesa.icd

    _pick clrust32 $libdir/libRusticlOpenCL*
    _pick clrust32 etc/OpenCL/vendors/rusticl.icd

    _pick vkintel32 $icddir/intel_*.json
    _pick vkintel32 $libdir/libvulkan_intel*.so

    _pick vklayer32 $libdir/libVkLayer_*.so
    _pick vklayer32 usr/bin/mesa-overlay-control.py
    _pick vklayer32 usr/share/vulkan/{ex,im}plicit_layer.d

    _pick vknvidia32 $icddir/nouveau_*.json
    _pick vknvidia32 $libdir/libvulkan_nouveau*.so

    _pick vkradeon32 $icddir/radeon_icd*.json
    _pick vkradeon32 $libdir/libvulkan_radeon.so
    _pick vkradeon32 usr/share/drirc.d/00-radv-defaults.conf

    _pick vkswrast32 $icddir/lvp_icd*.json
    _pick vkswrast32 $libdir/libvulkan_lvp.so

    rm -rv usr/{include,share}

    # indirect rendering
    ln -sr $libdir/libGLX_{mesa,indirect}.so.0
  )

  install -Dm644 mesa-$_mesaver/docs/license.rst -t "$pkgdir/usr/share/licenses/$pkgname"
}


